@model CargoApp.ViewModels.RegisterViewmodel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Register</title>
    <!-- Custom fonts for this template-->
    <link href="/Kt/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/Kt/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                            {

                                @Html.ValidationSummary(false, "", new { @class = "text-danger" }) //bu eğer hata varsa hatalar buraya gelecek direk

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user rounded-pill" id="exampleFirstName" placeholder="First Name" name="firstname">
                                        @Html.ValidationMessageFor(m => m.firstname, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user rounded-pill" id="exampleLastName" placeholder="Last Name" name="lastname">
                                        @Html.ValidationMessageFor(m => m.lastname, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="email" class="form-control form-control-user rounded-pill" id="exampleInputEmail" placeholder="Email Address" name="email">
                                        @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user rounded-pill" placeholder="Phone number" name="phone">
                                        @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user rounded-pill" id="exampleInputPassword" placeholder="Password" name="password">
                                        @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user rounded-pill" id="exampleRepeatPassword" placeholder="Repeat Password" name="repeatpassword">
                                        @Html.ValidationMessageFor(m => m.repeatpassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block rounded-pill">Register Account</button>

                                if (ViewBag.Information != null)
                                {

                                    <div class="alert alert-success mt-3 p-2" role="alert">
                                        @ViewBag.Information <i class="far fa-check-circle"></i>
                                    </div>

                                }

                                <hr>
                                <a href="#" class="btn btn-google btn-user btn-block rounded-pill">
                                    <i class="fab fa-google fa-fw"></i> Register with Google
                                </a>
                                <a href="#" class="btn btn-facebook btn-user btn-block rounded-pill">
                                    <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                                </a>

                            }

                            <hr>
                            <div class="text-center">
                                <a class="small" href="/Account/Forgot">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Account/Login">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/Kt/vendor/jquery/jquery.min.js"></script>
    <script src="/Kt/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/Kt/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/Kt/js/sb-admin-2.min.js"></script>
</body>
</html>

