@model CargoApp.ViewModels.ResetPasswordViewmodel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Reset Password</title>
    <!-- Custom fonts for this template-->
    <link href="/Kt/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/Kt/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-gradient-danger"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Reset password</h1>
                                    </div>

                                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                                    {
                                        
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user rounded-pill" placeholder="New password..." name="newpassword">
                                            @Html.ValidationMessageFor(m => m.newpassword, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user rounded-pill" placeholder="Confirm password" name="confirmpassword">
                                            @Html.ValidationMessageFor(m => m.confirmpassword, "", new { @class = "text-danger" })
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block rounded-pill">Save</button>


                                        if (ViewBag.Information != null)
                                        {

                                            <div class="alert alert-success mt-3 p-2" role="alert">
                                                @ViewBag.Information <i class="far fa-check-circle"></i>
                                            </div>

                                        }
                                    }

                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/Account/Login">Login</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/Kt/vendor/jquery/jquery.min.js"></script>
    <script src="/Kt/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/Kt/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/Kt/js/sb-admin-2.min.js"></script>
</body>
</html>

