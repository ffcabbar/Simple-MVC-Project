@model CargoApp.Models.Cargo


<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <!-- <h1 class="h3 mb-4 text-gray-800">Kargo Takip</h1> -->
    <div class="row">
        <div class="col-lg-12">

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Kargo Takip</h6>
                </div>
                <div class="card-body">
                    <p>Sorguladığınız gönderinin bilgilerine aşağıdan ulaşabilirsiniz. </p>

                    <div class="mb-2">
                        <code class="ml-2">Kargo numarasını giriniz</code>
                        <input type="text" id="cargoNumberTextID" class="form-control form-control-user rounded-pill mt-2" placeholder="Please enter the cargo number...">
                        <button type="submit" class="btn btn-outline-primary btn-user btn-block rounded-pill mt-2" onclick="getcargo()">Submit</button>
                    </div>

                    @if (ViewBag.Information != null)
                    {

                        <div class="alert alert-success mt-3 p-2" role="alert">
                            @ViewBag.Information <i class="far fa-check-circle"></i>
                        </div>

                    }

                </div>
            </div>

            <div id="cargolar">
                @* Buraya _GetCargoResult'daki partial view gelecek *@
            </div>

        </div>
    </div>
</div>


<script type="text/javascript">

    function getcargo() {


        var cargoNumber = $('#cargoNumberTextID').val();

        console.log(cargoNumber);

        if (cargoNumber !=="") {
            $.ajax({
            type: 'GET',

              url: '@Url.Action("GetCargoPartialView", "Kargo")',
              data: { CargoNumber: cargoNumber },

            success: function (result) {
                $("#cargolar").html(result);  //burası çok kritik
            },

            error: function () {
                alert('Kargo numarasını doğru girdiğinizden emin olun. Kayıt bulunamadı!');
            }
        }).done(function () {
            $("#thisbutton").show();

            //preloaderı burada kapatırsın
        });

        }
        else {
            alert("Lütfen önce kargo numarasını giriniz!");
        }

    };

    //$("#kargoButton").animate(function() {
       //bbunlara bakarsın işte, onun haricinde ajax konusunu derinlemesine öğren, istersen preloader da koyarsın
    //});

</script>

